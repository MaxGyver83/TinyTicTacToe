# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file.
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{h,c,sh,bash}]
trim_trailing_whitespace = true

[*.{h,c}]
indent_style = tab
tab_width = 4

[*.{sh,bash}]
indent_style = space
indent_size = 4
